@page
@model Q2.Pages.BookList.EditModel



<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="student_Info.student_id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="student_Info.name"></label>
            </div>
            <div class="col-4">
                <input asp-for="student_Info.name" class="form-control" />
            </div>
            <span asp-validation-for="student_Info.name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="student_Info.city"></label>
            </div>
            <div class="col-4">
                <input asp-for="student_Info.city" class="form-control" />
            </div>
            <span asp-validation-for="student_Info.city" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="student_Info.course_id"></label>
            </div>
            <div class="col-4">
                <input asp-for="student_Info.course_id" class="form-control" />
            </div>
            <span asp-validation-for="student_Info.course_id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}